---
import { LinkButton, Typography } from '@/components'
import { getGradient } from '@/utils/gradients'

const gradient = getGradient('dark')
---

<section class='absolute left-1/2 top-0 -translate-y-1/2 -translate-x-1/2'>
  <div
    class='flex md:flex-row flex-col md:gap-12 gap-4 items-center rounded-3xl md:rounded-full px-6 md:px-12 py-6'
    class:list={gradient}>
    <Typography
      tag={'p'}
      variant={'subtitle'}
      color={'neutral_white'}
      class='text-nowrap'
      ><slot name='header' /></Typography
    >
    <LinkButton gradient={'accent_1'}><slot name='cta' /></LinkButton>
  </div>
</section>
