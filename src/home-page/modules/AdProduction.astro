---
import { Typography, BorderText, BaseContainer, LinkButton } from '@/components'

interface Props {
  id?: string
}

const { id } = Astro.props
---

<BaseContainer
  variant={'section'}
  id={id}>
  <Typography
    as={'h2'}
    variant={'title'}
    color={'neutral_dark'}
    class='mb-12'>
    <slot name='header'>No module slot header</slot>
  </Typography>

  <div class='grid grid-cols-2'>
    <div class='space-y-12'>
      <BorderText
        side={'bold_left'}
        style={'solid'}
        theme={'dark'}
        variant={'card'}
        borderColor={'accent_title'}>
        <slot
          name='card-header-1'
          slot='header'>
          No module slot card-header-1
        </slot>
        <slot
          name='card-body-1'
          slot='body'>
          No module slot card-body-1
        </slot>
      </BorderText>

      <BorderText
        side={'none'}
        style={'solid'}
        theme={'dark'}
        variant={'card'}
        borderColor={'accent_title'}>
        <slot
          name='card-header-2'
          slot='header'>
          No module slot card-header-2
        </slot>
        <slot
          name='card-body-2'
          slot='body'>
          No module slot card-body-2
        </slot>
      </BorderText>

      <BorderText
        side={'none'}
        style={'solid'}
        theme={'dark'}
        variant={'card'}
        borderColor={'accent_title'}>
        <slot
          name='card-header-3'
          slot='header'>
          No module slot card-header-3
        </slot>
        <slot
          name='card-body-3'
          slot='body'>
          No module slot card-body-3
        </slot>
      </BorderText>

      <LinkButton
        gradient={'accent_1'}
        class='ml-6'>
        <slot name='cta'>No module slot cta</slot>
      </LinkButton>
    </div>
  </div>
</BaseContainer>
