---
import { Typography, BaseContainer, LinkButton } from '@/components'

interface Props {
  id?: string
}

const { id='ad-production' } = Astro.props
---

<BaseContainer
  variant={'section'}
  id={id}>
  <Typography
    as={'h2'}
    variant={'title'}
    color={'neutral_dark'}
    class='mb-12'>
    <slot name='header'>No module slot header</slot>
  </Typography>

  <div class='grid grid-cols-2'>
    <div class='space-y-12'>
      <slot name="cards">No module slot cards</slot>

      <LinkButton
        gradient={'accent_1'}
        class='ml-6'>
        <slot name='cta'>No module slot cta</slot>
      </LinkButton>
    </div>
  </div>
</BaseContainer>
