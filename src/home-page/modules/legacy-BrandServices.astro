---
import { BaseContainer, IconCard } from '@/components'
import { SEOImage } from '@/assets'

interface Props {
  images: string[]
  alts?: string[]
  largeImages?: string[]
  mediumImages?: string[]
  id?: string
}

const { images, id, alts = [], largeImages = [], mediumImages = [] } = Astro.props
const [image1, image2, image3] = images
const [large1, large2, large3] = largeImages
const [medium1, medium2, medium3] = mediumImages
const [alt1, alt2, alt3] = alts
---

<BaseContainer
  id={id}
  variant={'section'}
  class='grid grid-cols-3 gap-6 w-full'>
  <slot name='cards' />
</BaseContainer>
