---
import { Typography, BaseContainer, LinkButton } from '@/components'

interface Props {
  id?: string
}

const { id='sales-method' } = Astro.props
---

<BaseContainer
  id={id}
  variant={'section'}
  class='space-y-12'>
  <Typography
    tag={'h2'}
    variant={'title'}
    color={'neutral_dark'}>
    <slot name='header'>No module slot header</slot>
  </Typography>
  <div class='grid grid-cols-2'>
    <div class='grid grid-cols-2 grid-rows-2 gap-12'>
      <slot name="cards">No module slot cards</slot>
    </div>
  </div>

  <div class='flex justify-between items-end'>
    <LinkButton gradient={'accent_1'}
      ><slot name='cta'>No module slot cta</slot></LinkButton
    >
    <Typography
      tag={'p'}
      variant={'sidecard_title'}
      color={'neutral_dark'}>
      <slot name='body'>No module slot body</slot>
    </Typography>
  </div>
</BaseContainer>
