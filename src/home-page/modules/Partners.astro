---
import {
  BaseContainer,
  GradientContainer,
  HAutoScroll,
  HAutoScrollItem,
  Typography,
  LinkButton,
} from '@/components'
import lighthouse_img from '@/assets/Icons/partners/Lighthouse.png'
import amatista_img from '@/assets/Icons/partners/amatista.svg'
import noemi_img from '@/assets/Icons/partners/noemi-cabana.svg'
---

<GradientContainer
  variant={'section'}
  gradient={'dark'}
  class='text-center py-16'>
  <Typography
    tag={'h2'}
    variant={'spaced'}
    color={'neutral_white_less'}>
    <slot name='pre-header' />
  </Typography>

  <Typography
    tag={'h3'}
    variant={'title'}
    color={'neutral_white'}>
    <slot name='header-1' />
  </Typography>

  <Typography
    tag={'p'}
    variant={'body'}
    color={'neutral_white_less'}
    class='max-w-md mx-auto'>
    <slot name='body-1' />
  </Typography>

  <HAutoScroll class='mt-12'>
    <HAutoScrollItem>
      <img
        src={lighthouse_img.src}
        alt='logo lighthouse'
        class='h-full w-fit'
        loading='lazy'
        height='218'
        width='1151'
      />
    </HAutoScrollItem>

    <HAutoScrollItem>
      <img
        src={amatista_img.src}
        alt='logo amatista'
        class='h-full w-fit'
        loading='lazy'
        height='48'
        width='240'
      />
    </HAutoScrollItem>

    <HAutoScrollItem>
      <img
        src={noemi_img.src}
        alt='logo noemi'
        class='h-full w-fit'
        loading='lazy'
        height='48'
        width='240'
      />
    </HAutoScrollItem>

    <HAutoScrollItem>
      <span
        class='text-white text-3xl font-bold text-center text-nowrap h-full flex items-center'
        >Silvestre LAB</span
      >
    </HAutoScrollItem>
  </HAutoScroll>
</GradientContainer>

<BaseContainer
  variant={'card'}
  class='text-center py-16'>
  <Typography
    tag={'h3'}
    variant={'title'}
    color={'neutral_dark'}>
    <slot name='header-2' />
  </Typography>

  <Typography
    tag={'p'}
    variant={'body'}
    color={'neutral_dark_less'}
    class='mb-12 mt-4 max-w-md mx-auto'>
    <slot name='body-2' />
  </Typography>

  <div class='flex justify-center'>
    <LinkButton gradient={'accent_1'}><slot name='cta' /></LinkButton>
  </div>
</BaseContainer>
