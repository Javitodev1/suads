---
import { BaseText, BaseContainer } from '@/components'

interface Props {
  id?: string
}

const { id = 'creativity' } = Astro.props
---

<BaseContainer
  id={id}
  variant={'section'}
  class='flex flex-col justify-between pb-40 pt-20 bg-neutral-100'>
  <BaseText
    variant={'section'}
    theme={'dark'}>
    <slot
      name='header'
      slot='header'
      >No module slot header</slot
    >
    <slot
      name='body'
      slot='body'
      >No module slot body</slot
    >
  </BaseText>

  <div class='grid grid-cols-3 gap-x-6 mt-20'>
    <slot name="cards" />
  </div>
</BaseContainer>
