---
import {
  BaseContainer,
  Typography,
  LinkButton,
  IconCard,
  Separator,
} from '@/components'
---

<Separator variant={'up_top'} />
<BaseContainer
  variant={'hero'}
  class='bg-neutral-dark space-y-12'>
  <Typography
    class='text-center'
    as={'h2'}
    variant={'title'}
    color={'neutral_white'}>
    <slot name='header'> No module slot header </slot>
  </Typography>

  <div class='flex justify-center'>
    <LinkButton gradient={'accent_1'}>
      <slot name='cta'> No module slot cta </slot>
    </LinkButton>
  </div>

  <div class='grid grid-cols-3 gap-x-12'>
    <IconCard
      variant={'light'}
      shape={'full'}>
      <slot
        name='card-header-1'
        slot='header'>
        No module slot card-header-1
      </slot>
      <slot
        name='card-body-1'
        slot='body'>
        No module slot card-body-1
      </slot>
    </IconCard>

    <IconCard
      variant={'light'}
      shape={'full'}>
      <slot
        name='card-header-2'
        slot='header'>
        No module slot card-header-1
      </slot>
      <slot
        name='card-body-2'
        slot='body'>
        No module slot card-body-1
      </slot>
    </IconCard>

    <IconCard
      variant={'light'}
      shape={'full'}>
      <slot
        name='card-header-3'
        slot='header'>
        No module slot card-header-1
      </slot>
      <slot
        name='card-body-3'
        slot='body'>
        No module slot card-body-1
      </slot>
    </IconCard>
  </div>
</BaseContainer>
