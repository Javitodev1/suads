---
 interface Props extends HTMLImageElement {
  large?: string
  medium?: string
  class?: string
}

const { class: className, src, alt, large = src, medium = src, loading = 'lazy' } = Astro.props
---

<picture>
  <source
    srcset={large}
    media='(min-width: 1200px)'
  />
  <source
    srcset={medium}
    media='(min-width: 768px)'
  />
  <img
    src={src}
    alt={alt}
    loading={loading}
    class:list={className}
  />
</picture>
