---
import * as RadixIcon from '@astropub/icons'
import * as HomeIcon from './home'
import * as SocialIcon from './socials'

enum Variants {
  // brief icons
  person,
  phone,
  email,
  country,
  city,
  business,
  website,

  // home icons
  home_ad,
  home_business,
  home_embudo,
  home_heart,
  home_people,
  home_results,
  home_segment,

  // social icons
  social_instagram,
  social_facebook,
  social_linkedin,
}

type Variant = keyof typeof Variants

interface Props {
  variant: Variant
  class?: string
}

const { variant, class: className } = Astro.props

const key = Variants[variant]
---

{key === Variants.person && <RadixIcon.Person class:list={className} />}
{key === Variants.phone && <RadixIcon.ChatBubble class:list={className} />}
{key === Variants.email && <RadixIcon.EnvelopeOpen class:list={className} />}
{key === Variants.country && <RadixIcon.SewingPin class:list={className} />}
{key === Variants.city && <RadixIcon.DrawingPin class:list={className} />}
{key === Variants.business && <RadixIcon.Rocket class:list={className} />}
{key === Variants.website && <RadixIcon.Globe class:list={className} />}

{key === Variants.home_ad && <HomeIcon.Ad class:list={className} />}
{key === Variants.home_business && <HomeIcon.Business class:list={className} />}
{key === Variants.home_embudo && <HomeIcon.Embudo class:list={className} />}
{key === Variants.home_heart && <HomeIcon.Heart class:list={className} />}
{key === Variants.home_people && <HomeIcon.People class:list={className} />}
{key === Variants.home_results && <HomeIcon.Results class:list={className} />}
{key === Variants.home_segment && <HomeIcon.Segment class:list={className} />}

{key === Variants.social_instagram && <SocialIcon.InstagramSolid class:list={className} />}
{key === Variants.social_facebook && <SocialIcon.FacebookSolid class:list={className} />}
{key === Variants.social_linkedin && <SocialIcon.LinkedinSolid class:list={className} />}
