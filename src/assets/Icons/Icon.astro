---
import * as RadixIcon from '@astropub/icons'
import * as HomeIcon from './home'

enum Variants {
  // brief icons
  person,
  phone,
  email,
  country,
  city,
  business,
  website,

  // home icons
  home_ad,
  home_business,
  home_embudo,
  home_heart,
  home_people,
  home_results,
  home_segment,
}

type Variant = keyof typeof Variants

interface Props {
  variant: Variant
  class?: string
}

const { variant, class: className } = Astro.props

const key = Variants[variant]
---

{key === Variants.person && <RadixIcon.Person class:list={className} />}
{key === Variants.phone && <RadixIcon.ChatBubble class:list={className} />}
{key === Variants.email && <RadixIcon.EnvelopeOpen class:list={className} />}
{key === Variants.country && <RadixIcon.SewingPin class:list={className} />}
{key === Variants.city && <RadixIcon.DrawingPin class:list={className} />}
{key === Variants.business && <RadixIcon.Rocket class:list={className} />}
{key === Variants.website && <RadixIcon.Globe class:list={className} />}

{key === Variants.home_ad && <HomeIcon.Ad />}
{key === Variants.home_business && <HomeIcon.Business />}
{key === Variants.home_embudo && <HomeIcon.Embudo />}
{key === Variants.home_heart && <HomeIcon.Heart />}
{key === Variants.home_people && <HomeIcon.People />}
{key === Variants.home_results && <HomeIcon.Results />}
{key === Variants.home_segment && <HomeIcon.Segment />}
