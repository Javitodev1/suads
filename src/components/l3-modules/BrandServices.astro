---
import { BaseContainer, IconCard, SEOImage } from '@/components'

interface Props {
  images: string[]
  alts?: string[]
  largeImages?: string[]
  mediumImages?: string[]
  id?: string
}

const {
  images,
  id,
  alts = [],
  largeImages = [],
  mediumImages = [],
} = Astro.props
const [image1, image2, image3] = images
const [large1, large2, large3] = largeImages
const [medium1, medium2, medium3] = mediumImages
const [alt1, alt2, alt3] = alts
---

<BaseContainer
  id={id}
  variant={'section'}
  class='grid grid-cols-3 gap-6 w-full'>
  <IconCard
    variant={'light'}
    shape={'full'}>
    <SEOImage
      slot={'icon'}
      src={image1}
      alt={alt1}
      large={large1}
      medium={medium1}
    />
    <slot
      name='card-header-1'
      slot='header'
      >No module slot card-header-1</slot
    >
    <slot
      name='card-body-1'
      slot='body'
      >No module slot card-body-1</slot
    >
  </IconCard>
  <IconCard
    variant={'light'}
    shape={'full'}>
    <SEOImage
      slot={'icon'}
      src={image2}
      alt={alt2}
      large={large2}
      medium={medium2}
    />
    <slot
      name='card-header-2'
      slot='header'
      >No module slot card-header-2</slot
    >
    <slot
      name='card-body-2'
      slot='body'
      >No module slot card-body-2</slot
    >
  </IconCard>
  <IconCard
    variant={'light'}
    shape={'full'}>
    <SEOImage
      slot={'icon'}
      src={image3}
      alt={alt3}
      large={large3}
      medium={medium3}
    />
    <slot
      name='card-header-3'
      slot='header'
      >No module slot card-header-3</slot
    >
    <slot
      name='card-body-3'
      slot='body'
      >No module slot card-body-3</slot
    >
  </IconCard>
</BaseContainer>
