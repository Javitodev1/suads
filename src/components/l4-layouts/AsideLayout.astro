---
interface Props {
  title: string
}

const { title } = Astro.props
---

<html lang='es'>
  <head>
    <meta charset='utf-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <title>{title}</title>
  </head>
  <body>
    <div class='grid grid-cols-12'>
      <aside class='col-span-2 relative min-w-40'>
        <div class='sticky h-screen w-full top-0 left-0 p-6 bg-neutral-700'>
          <slot name='header' />
        </div>
      </aside>
      <main class='col-span-10'>
        <slot name='main' />
      </main>
    </div>
  </body>
</html>
