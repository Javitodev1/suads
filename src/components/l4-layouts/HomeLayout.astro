---
import {
  AsideLayout,
  Creativity,
  AdMethod,
  Hero,
  SalesMethod,
  AdProduction,
  PlaceholderIcon,
  BrandServices,
  Header,
  WebDesign,
} from '@/components'
import type { Link } from '@/components/types'

interface Props {
  title: string
  heroVideoSrc: string
  brandImageSrc: string[]
  brandImageAlt: string[]
  links: Link[]
}

const { title, heroVideoSrc, brandImageSrc, brandImageAlt, links } = Astro.props
---

<AsideLayout title={title}>
  <Fragment slot='header'>
    <Header links={links} />
  </Fragment>

  <Fragment slot='main'>
    <Hero
      variant={'right'}
      src={heroVideoSrc}
      id='hero'>
      <slot
        name='hero-header'
        slot='header'>
        No layout slot hero-header
      </slot>
      <slot
        name='hero-body'
        slot='body'>
        No layout slot hero-body
      </slot>
      <slot
        name='hero-cta'
        slot='cta'>
        No layout slot hero-cta
      </slot>
    </Hero>

    <BrandServices
      images={brandImageSrc}
      alts={brandImageAlt}
      id='services'>
      <slot
        name='brand-services-header'
        slot='header'>
        No layout slot header
      </slot>
      <slot
        name='brand-services-body'
        slot='body'>
        No layout slot body
      </slot>
    </BrandServices>

    <Creativity id='creativity'>
      <slot
        name='creativity-header'
        slot='header'>
        No layout slot creativity-header
      </slot>
      <slot
        name='creativity-body'
        slot='body'>
        No layout slot creativity-body
      </slot>
      <slot
        name='creativity-card-icon-1'
        slot='card-icon-1'>
        <PlaceholderIcon variant={'dark'} />
      </slot>
      <slot
        name='creativity-card-header-1'
        slot='card-header-1'>
        No layout slot creativity-card-header- 1
      </slot>
      <slot
        name='creativity-card-body-1'
        slot='card-body-1'>
        No layout slot creativity-card-body- 1
      </slot>
      <slot
        name='creativity-card-icon-2'
        slot='card-icon-2'>
        <PlaceholderIcon variant={'dark'} />
      </slot>
      <slot
        name='creativity-card-header-2'
        slot='card-header-2'>
        No layout slot creativity-card-header- 2
      </slot>
      <slot
        name='creativity-card-body-2'
        slot='card-body-2'>
        No layout slot creativity-card-body- 2
      </slot>
      <slot
        name='creativity-card-icon-3'
        slot='card-icon-3'>
        <PlaceholderIcon variant={'dark'} />
      </slot>
      <slot
        name='creativity-card-header-3'
        slot='card-header-3'>
        No layout slot creativity-card-header- 3
      </slot>
      <slot
        name='creativity-card-body-3'
        slot='card-body-3'>
        No layout slot creativity-card-body- 3
      </slot>
    </Creativity>

    <AdMethod id='ad-method'>
      <slot
        name='ad-method-header'
        slot='header'>
        No layout slot ad-method-header
      </slot>
      <slot
        name='ad-method-body'
        slot='body'>
        No layout slot ad-method-body
      </slot>
      <slot
        name='ad-method-card-header-1'
        slot='card-header-1'>
        No layout slot ad-method-card-header-1
      </slot>
      <slot
        name='ad-method-card-body-1'
        slot='card-body-1'>
        No layout slot ad-method-card-body-1
      </slot>
      <slot
        name='ad-method-card-header-2'
        slot='card-header-2'>
        No layout slot ad-method-card-header-2
      </slot>
      <slot
        name='ad-method-card-body-2'
        slot='card-body-2'>
        No layout slot ad-method-card-body-2
      </slot>
      <slot
        name='ad-method-card-header-3'
        slot='card-header-3'>
        No layout slot ad-method-card-header-3
      </slot>
      <slot
        name='ad-method-card-body-3'
        slot='card-body-3'>
        No layout slot ad-method-card-body-3
      </slot>
      <slot
        name='ad-method-card-header-4'
        slot='card-header-4'>
        No layout slot ad-method-card-header-4
      </slot>
      <slot
        name='ad-method-card-body-4'
        slot='card-body-4'>
        No layout slot ad-method-card-body-4
      </slot>
      <slot
        name='ad-method-card-header-5'
        slot='card-header-5'>
        No layout slot ad-method-card-header-5
      </slot>
      <slot
        name='ad-method-card-body-5'
        slot='card-body-5'>
        No layout slot ad-method-card-body-5
      </slot>
      <slot
        name='ad-method-cta'
        slot='cta'>
        No layout slot ad-method-cta
      </slot>
    </AdMethod>

    <SalesMethod id='sales-method'>
      <slot
        name='sales-method-header'
        slot='header'>
        No layout slot sales-method-header
      </slot>
      <slot
        name='sales-method-card-header-1'
        slot='card-header-1'>
        No layout slot sales-method-card-header-1
      </slot>
      <slot
        name='sales-method-card-body-1'
        slot='card-body-1'>
        No layout slot sales-method-card-body-1
      </slot>
      <slot
        name='sales-method-card-header-2'
        slot='card-header-2'>
        No layout slot sales-method-card-header-2
      </slot>
      <slot
        name='sales-method-card-body-2'
        slot='card-body-2'>
        No layout slot sales-method-card-body-2
      </slot>
      <slot
        name='sales-method-card-header-3'
        slot='card-header-3'>
        No layout slot sales-method-card-header-3
      </slot>
      <slot
        name='sales-method-card-body-3'
        slot='card-body-3'>
        No layout slot sales-method-card-body-3
      </slot>
      <slot
        name='sales-method-card-header-4'
        slot='card-header-4'>
        No layout slot sales-method-card-header-4
      </slot>
      <slot
        name='sales-method-card-body-4'
        slot='card-body-4'>
        No layout slot sales-method-card-body-4
      </slot>
      <slot
        name='sales-method-cta'
        slot='cta'>
        No layout slot sales-method-cta
      </slot>
      <slot
        name='sales-method-body'
        slot='body'>
        No layout slot sales-method-body
      </slot>
    </SalesMethod>

    <AdProduction id='ad-production'>
      <slot
        name='ad-production-header'
        slot='header'>
        No layout slot ad-production-header
      </slot>
      <slot
        name='ad-production-card-header-1'
        slot='card-header-1'>
        No layout slot ad-production-card-header-1
      </slot>
      <slot
        name='ad-production-card-body-1'
        slot='card-body-1'>
        No layout slot ad-production-card-body-1
      </slot>
      <slot
        name='ad-production-card-header-2'
        slot='card-header-2'>
        No layout slot ad-production-card-header-2
      </slot>
      <slot
        name='ad-production-card-body-2'
        slot='card-body-2'>
        No layout slot ad-production-card-body-2
      </slot>
      <slot
        name='ad-production-card-header-3'
        slot='card-header-3'>
        No layout slot ad-production-card-header-3
      </slot>
      <slot
        name='ad-production-card-body-3'
        slot='card-body-3'>
        No layout slot ad-production-card-body-3
      </slot>
      <slot
        name='ad-production-cta'
        slot='cta'>
        No layout slot ad-production-cta
      </slot>
    </AdProduction>

    <WebDesign>
      <slot
        name='web-design-header'
        slot='header'>
        No layout slot web-design-header
      </slot>
      <slot
        name='web-design-cta'
        slot='cta'>
        No layout slot web-design-cta
      </slot>

      <slot
        name='web-design-card-header-1'
        slot='card-header-1'
        >No layout slot web-design-card-header-1</slot
      >
      <slot
        name='web-design-card-body-1'
        slot='card-body-1'
        >No layout slot web-design-card-body-1</slot
      >
      <slot
        name='web-design-card-header-2'
        slot='card-header-2'
        >No layout slot web-design-card-header-2</slot
      >
      <slot
        name='web-design-card-body-2'
        slot='card-body-2'
        >No layout slot web-design-card-body-2</slot
      >
      <slot
        name='web-design-card-header-3'
        slot='card-header-3'
        >No layout slot web-design-card-header-3</slot
      >
      <slot
        name='web-design-card-body-3'
        slot='card-body-3'
        >No layout slot web-design-card-body-3</slot
      >
    </WebDesign>
  </Fragment>
</AsideLayout>
