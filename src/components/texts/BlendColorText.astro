---
import { Typography } from '@/components'
---

<div class="relative w-full h-[50dvh]">
  <div class="z-10 size-full clip">
    <slot name='bg' />
  </div>

  <Typography
    tag={'h1'}
    variant={'banner'}
    color={'neutral_white'}
    class='max-w-screen-md absolute top-12 left-12 mix-blend-color-dodge'>
    <slot name='header' />
  </Typography>
  <Typography
    tag={'p'}
    variant={'banner'}
    color={'neutral_white'}
    class='max-w-screen-md z-20 absolute top-12 left-12 opacity-70'>
    <slot name='header' />
  </Typography>
  
  <Typography
    tag={'p'}
    variant={'banner'}
    color={'neutral_dark'}
    class='max-w-screen-md -z-10 absolute top-12 left-12'>
    <slot name='header' />
  </Typography>
</div>

<style>
  .clip {
    clip-path: polygon(100% 0, 100% 30%, 20% 100%, 0 100%, 0 0);
  }
</style>