---
import type {} from '@/components/types'

interface Props {
  src: string
  alt: string
}

const { src, alt } = Astro.props
---

<section class='relative overflow-hidden'>
  <div class='size-full'>
    <picture class='object-cover object-center'>
      <img
        src={src}
        alt={alt}
      />
    </picture>
  </div>

  <div class='absolute top-0 left-0 size-full'>
    <slot />
  </div>
</section>
