---
import { BaseContainer } from '@/components'
import { getGradient } from '@/components/utils'
import type { BaseContainerVariant, Gradient } from '@/components/types'

interface Props {
  variant: BaseContainerVariant
  gradient: Gradient
  children: any
  class?: string
}

const { variant, gradient, class: className } = Astro.props
const classes = [className, getGradient(gradient)]
---

<BaseContainer
  variant={variant}
  class:list={classes}
  ><slot /></BaseContainer
>
